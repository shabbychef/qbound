# simple markowitz.
simple.marko <- function(rets) {
	mu.hat <- colMeans(rets,na.rm=TRUE)
	Sig.hat <- cov(rets)
	w.opt <- solve(Sig.hat,mu.hat)
	retval <- list('mu'=mu.hat,'sig'=Sig.hat,'w'=w.opt)
	return(retval)
}

